# Multi-stage build for MoolAI Controller Service
FROM python:3.11-slim as builder

# Set build arguments
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=1.0.0

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy controller requirements
COPY services/controller/requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --user -r requirements.txt

# Production stage
FROM python:3.11-slim as production

# Set build arguments for labels
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=1.0.0

# Add labels for metadata
LABEL org.moolai.service="controller" \
      org.moolai.version="${VERSION}" \
      org.moolai.description="MoolAI Central Controller Service" \
      org.moolai.build-date="${BUILD_DATE}" \
      org.moolai.vcs-ref="${VCS_REF}" \
      org.opencontainers.image.title="MoolAI Controller Service" \
      org.opencontainers.image.description="Central management and analytics controller" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.revision="${VCS_REF}" \
      org.opencontainers.image.vendor="MoolAI" \
      org.opencontainers.image.source="https://github.com/moolai/controller"

# Install runtime dependencies only
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create app user and directory
RUN groupadd -r moolai && useradd -r -g moolai moolai \
    && mkdir -p /app /app/logs /app/data /app/analytics \
    && chown -R moolai:moolai /app

# Set working directory
WORKDIR /app

# Copy Python dependencies from builder stage
COPY --from=builder --chown=moolai:moolai /root/.local /home/moolai/.local

# Copy controller application code
COPY --chown=moolai:moolai services/controller/app ./app/
COPY --chown=moolai:moolai services/controller/requirements.txt ./

# Copy common modules for real-time communication
COPY --chown=moolai:moolai common/ ./common/

# Set environment variables
ENV PYTHONPATH=/app \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PATH=/home/moolai/.local/bin:$PATH \
    CONTROLLER_PORT=8002 \
    LOG_LEVEL=INFO

# Expose controller port (8002 to avoid conflicts with orchestrator:8000 and monitoring:8001)
EXPOSE 8002

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8002/health || exit 1

# Switch to non-root user
USER moolai

# Set default command
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8002", "--workers", "1"]