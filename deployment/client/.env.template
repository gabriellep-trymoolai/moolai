# MoolAI Client Deployment Configuration
# Copy this to .env and customize for each client organization

# Organization Configuration
ORGANIZATION_ID=org_001
ORGANIZATION_NAME="Client Organization Name"
ORCHESTRATOR_ID=${ORGANIZATION_ID}_orchestrator

# Controller Connection (your central controller)
CONTROLLER_URL=https://your-controller-domain.com:8002
CONTROLLER_API_KEY=PROVIDED_BY_MOOLAI

# Service Ports (change if conflicts exist)
ORCHESTRATOR_PORT=8000
MONITORING_PORT=8001
DATABASE_PORT=5432
REDIS_PORT=6379

# Database Configuration
DB_NAME_ORCHESTRATOR=orchestrator_${ORGANIZATION_ID}
DB_NAME_MONITORING=monitoring_${ORGANIZATION_ID}
DB_USER=moolai_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Orchestrator Configuration
ORCHESTRATOR_LOG_LEVEL=INFO
ORCHESTRATOR_API_KEY=CHANGE_THIS_API_KEY

# Monitoring Configuration (Sidecar)
MONITORING_MODE=sidecar
MONITORING_LOG_LEVEL=INFO
METRICS_COLLECTION_INTERVAL=30
AUTO_COLLECT=true

# LLM Configuration
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4

# Resource Limits (adjust based on client server)
ORCHESTRATOR_CPU_LIMIT=2.0
ORCHESTRATOR_MEMORY_LIMIT=2048M
MONITORING_CPU_LIMIT=1.0
MONITORING_MEMORY_LIMIT=1024M
DB_CPU_LIMIT=2.0
DB_MEMORY_LIMIT=2048M
REDIS_CPU_LIMIT=0.5
REDIS_MEMORY_LIMIT=512M

# Security Settings
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/backups

# Network Configuration
DOCKER_NETWORK=moolai-${ORGANIZATION_ID}-network

# TLS/SSL Configuration (for production)
TLS_ENABLED=false
TLS_CERT_PATH=/etc/ssl/certs/client.crt
TLS_KEY_PATH=/etc/ssl/private/client.key