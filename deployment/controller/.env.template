# MoolAI Controller Deployment Configuration
# Copy this to .env and customize for your infrastructure

# Controller Service Configuration
CONTROLLER_PORT=8002
CONTROLLER_HOST=0.0.0.0
LOG_LEVEL=INFO

# Controller Database Configuration
CONTROLLER_DB_HOST=postgres-controller
CONTROLLER_DB_PORT=5432
CONTROLLER_DB_NAME=controller_db
CONTROLLER_DB_USER=controller_user
CONTROLLER_DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Controller Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# API Security
CONTROLLER_API_KEY=CHANGE_THIS_API_KEY
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Resource Limits (adjust based on your server)
CONTROLLER_CPU_LIMIT=2.0
CONTROLLER_MEMORY_LIMIT=2048M
DB_CPU_LIMIT=2.0
DB_MEMORY_LIMIT=2048M

# Monitoring Settings
ENABLE_METRICS=true
METRICS_EXPORT_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# Network Configuration
DOCKER_NETWORK=moolai-controller-network

# TLS/SSL Configuration (for production)
TLS_ENABLED=false
TLS_CERT_PATH=/etc/ssl/certs/controller.crt
TLS_KEY_PATH=/etc/ssl/private/controller.key