# MoolAI System Environment Configuration
# Copy this file to .env and modify values as needed

# Build Configuration
BUILD_DATE=
VCS_REF=
VERSION=1.0.0

# Registry Configuration
REGISTRY=moolai

# Monitoring Service Configuration
MONITORING_MODE=sidecar
LOG_LEVEL=INFO

# Database Configuration (Production)
# These should be replaced with secure values in production
POSTGRES_USER=monitoring_user
POSTGRES_PASSWORD_ORG_001=secure_password_001
POSTGRES_PASSWORD_ORG_002=secure_password_002

# Redis Configuration
REDIS_PASSWORD=

# OpenAI Configuration (if using AI features)
OPENAI_API_KEY=

# Organization Configuration
ORGANIZATION_001_ID=org_001
ORGANIZATION_002_ID=org_002

# Controller Configuration
CONTROLLER_MODE=central
CONTROLLER_PORT=8002

# Security Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Monitoring Configuration
SYSTEM_METRICS_INTERVAL=30
ENABLE_REALTIME_REDIS=true

# Development Configuration
ENABLE_DEBUG=false
ENABLE_RELOAD=false

# Network Configuration
NETWORK_INTERNAL=moolai-internal
NETWORK_BACKEND=moolai-backend

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s